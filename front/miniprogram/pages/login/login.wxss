/**
 * 登录页面样式
 */

.container {
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-container {
  margin-top: 40rpx;
}

.result-card {
  padding: 40rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.wolf-no-section {
  text-align: center;
  padding: 30rpx 0;
}

.label {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.wolf-no-value {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.confirm-btn {
  margin-top: 40rpx;
}

.register-form {
  margin-top: 40rpx;
}

.register-card {
  padding: 40rpx;
}

.register-btn {
  margin-top: 40rpx;
}

.login-card {
  padding: 40rpx;
  margin-top: 40rpx;
}

.form-content {
  padding: 20rpx 0;
}

.form-input {
  margin-bottom: 20rpx;
}

.input-hint {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.hint-text {
  font-size: 24rpx;
}

.login-btn {
  margin-top: 40rpx;
}

.switch-mode {
  text-align: center;
  margin-top: 40rpx;
}

.switch-link {
  font-size: 28rpx;
  text-decoration: underline;
}
