<!--登录页面-->
<view class="login-container">
  <!-- 顶部狼Logo -->
  <view class="logo-section">
    <image class="logo" src="/images/wolf-logo.png" mode="aspectFit"></image>
    <text class="app-name">WolfChat</text>
    <text class="app-slogan">狼群聚集地 · 即时通讯</text>
  </view>

  <!-- 登录表单 -->
  <view class="form-section">
    <!-- 手机号输入 -->
    <van-cell-group>
      <van-field
        value="{{ mobile }}"
        type="number"
        maxlength="11"
        placeholder="请输入手机号"
        border="{{ true }}"
        bind:change="onMobileChange"
        left-icon="phone-o"
      />
      
      <!-- 验证码输入 -->
      <van-field
        value="{{ smsCode }}"
        center
        type="number"
        maxlength="6"
        placeholder="请输入验证码"
        border="{{ true }}"
        bind:change="onSmsCodeChange"
        left-icon="shield-o"
        use-button-slot
      >
        <van-button 
          slot="button" 
          size="small" 
          type="primary"
          disabled="{{ countdown > 0 }}"
          bind:click="sendSmsCode"
        >
          {{ countdown > 0 ? countdown + 's后重发' : '获取验证码' }}
        </van-button>
      </van-field>
    </van-cell-group>

    <!-- 登录按钮 -->
    <view class="button-section">
      <van-button 
        type="info" 
        block 
        round
        custom-class="login-button"
        bind:click="login"
        loading="{{ loginLoading }}"
        disabled="{{ loginLoading }}"
      >
        登录
      </van-button>
    </view>

    <!-- 提示文字 -->
    <view class="tip-section">
      <text class="tip">首次登录将自动注册账号</text>
      <text class="tip">验证码请查看后端控制台日志</text>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="footer">
    <text class="copyright">WolfChat © 2024</text>
    <text class="wolf-emoji">🐺</text>
  </view>
</view>

