/* 创建群组页面样式 */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 30rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

/* 成员选择区域 */
.member-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.tip {
  font-size: 24rpx;
  color: #969799;
  font-weight: normal;
  margin-left: 10rpx;
}

.member-input {
  margin-bottom: 20rpx;
}

/* 成员列表 */
.member-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 30rpx;
  color: white;
}

.member-no {
  font-size: 26rpx;
  margin-right: 12rpx;
}

.remove-icon {
  font-size: 32rpx;
  color: white;
}

/* 按钮区域 */
.button-section {
  padding: 0 30rpx;
}

