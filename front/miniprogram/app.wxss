/**
 * 全局样式 - 深色模式
 * 狼主题风格：主色调 #0a3e1e
 */

page {
  background-color: #0d0d0d;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* ==================== 主题色变量 ==================== */
:root {
  /* TDesign 品牌色 */
  --td-brand-color: #0a3e1e;
  --td-brand-color-light: #1a5f3e;
  --td-brand-color-focus: #0a3e1e;
  --td-brand-color-active: #083018;
  --td-brand-color-hover: rgba(10, 62, 30, 0.8);
  
  /* 自定义主题色 */
  --theme-primary: #0a3e1e;
  --theme-secondary: #0a3e1e;
  --theme-minor: #189649;
  --theme-warning: #3e0a0b;
  
  /* 深色模式背景 */
  --bg-primary: #0d0d0d;
  --bg-secondary: #1a1a1a;
  --bg-tertiary: #262626;
  --bg-card: #1f1f1f;
  
  /* 深色模式文字 */
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.85);
  --text-tertiary: rgba(255, 255, 255, 0.65);
  
  /* 深色模式边框 */
  --border-color: rgba(255, 255, 255, 0.1);
  --border-color-hover: rgba(10, 62, 30, 0.5);
  
  /* 圆角（统一为 3-5px） */
  --radius-small: 6rpx;   /* 3px - 小圆角 */
  --radius: 8rpx;         /* 4px - 标准圆角 */
  --radius-large: 10rpx;   /* 5px - 大圆角 */
}

/* ==================== TDesign 组件颜色覆盖 ==================== */

/* Button 按钮 */
.t-button--theme-primary {
  background-color: #0a3e1e !important;
  border-color: #0a3e1e !important;
  color: #ffffff !important;
}

.t-button--theme-primary.t-button--variant-outline {
  background-color: transparent !important;
  color: #0a3e1e !important;
  border-color: #0a3e1e !important;
}

.t-button--theme-primary.t-button--variant-text {
  color: #0a3e1e !important;
}

.t-button--theme-danger {
  background-color: #3e0a0b !important;
  border-color: #3e0a0b !important;
}

.t-button--theme-danger.t-button--variant-outline {
  color: #3e0a0b !important;
  border-color: #3e0a0b !important;
}

.t-button--theme-success {
  background-color: #189649 !important;
  border-color: #189649 !important;
}

/* Input 输入框 */
.t-input {
  background-color: #1a1a1a !important;
  color: #ffffff !important;
}

.t-input__wrap {
  background-color: #1a1a1a !important;
  border-color: rgba(255, 255, 255, 0.1) !important;
}

.t-input--focused .t-input__wrap {
  border-color: #0a3e1e !important;
}

.t-input__placeholder {
  color: rgba(255, 255, 255, 0.4) !important;
}

.t-input__label {
  color: rgba(255, 255, 255, 0.85) !important;
}

/* Cell 单元格 */
.t-cell {
  background-color: #1f1f1f !important;
  color: #ffffff !important;
}

.t-cell-group {
  background-color: #1f1f1f !important;
}

.t-cell__title {
  color: #ffffff !important;
}

.t-cell__note {
  color: rgba(255, 255, 255, 0.65) !important;
}

.t-cell--clickable:active {
  background-color: rgba(10, 62, 30, 0.2) !important;
}

.t-cell__right-icon {
  color: rgba(255, 255, 255, 0.65) !important;
}

/* Avatar 头像 */
.t-avatar {
  background-color: #0a3e1e !important;
  color: #ffffff !important;
}

/* Tag 标签 */
.t-tag--theme-primary {
  background-color: rgba(10, 62, 30, 0.3) !important;
  color: #0a3e1e !important;
  border-color: #0a3e1e !important;
}

.t-tag--theme-success {
  background-color: rgba(24, 150, 73, 0.3) !important;
  color: #189649 !important;
  border-color: #189649 !important;
}

.t-tag--theme-warning {
  background-color: rgba(62, 10, 11, 0.3) !important;
  color: #3e0a0b !important;
  border-color: #3e0a0b !important;
}

.t-tag--theme-danger {
  background-color: rgba(62, 10, 11, 0.3) !important;
  color: #3e0a0b !important;
  border-color: #3e0a0b !important;
}

/* Divider 分割线 */
.t-divider {
  border-color: rgba(255, 255, 255, 0.1) !important;
}

.t-divider__text {
  background-color: #0d0d0d !important;
  color: rgba(255, 255, 255, 0.65) !important;
}

/* Loading 加载 */
.t-loading {
  color: #0a3e1e !important;
}

/* Toast 提示 */
.t-toast {
  background-color: #1f1f1f !important;
  color: #ffffff !important;
}

/* Dialog 对话框 */
.t-dialog {
  background-color: #1f1f1f !important;
}

.t-dialog__header {
  color: #ffffff !important;
}

.t-dialog__body {
  color: rgba(255, 255, 255, 0.85) !important;
}

/* Popup 弹出层 */
.t-popup {
  background-color: #1f1f1f !important;
}

/* ActionSheet 动作面板 */
.t-action-sheet {
  background-color: #1f1f1f !important;
}

.t-action-sheet__item {
  color: #ffffff !important;
}

/* Switch 开关 */
.t-switch--checked {
  background-color: #0a3e1e !important;
}

/* Checkbox 复选框 */
.t-checkbox--checked .t-checkbox__icon {
  background-color: #0a3e1e !important;
  border-color: #0a3e1e !important;
}

/* Radio 单选框 */
.t-radio--checked .t-radio__icon {
  background-color: #0a3e1e !important;
  border-color: #0a3e1e !important;
}

/* Progress 进度条 */
.t-progress__bar {
  background-color: #0a3e1e !important;
}

/* Slider 滑块 */
.t-slider__bar {
  background-color: #0a3e1e !important;
}

.t-slider__button {
  background-color: #0a3e1e !important;
  border-color: #0a3e1e !important;
}

/* ==================== TDesign 组件圆角覆盖 ==================== */

/* Button 按钮 */
.t-button {
  border-radius: 8rpx !important;
}

/* Input 输入框 */
.t-input__wrap {
  border-radius: 8rpx !important;
}

/* Cell 单元格 */
.t-cell-group {
  border-radius: 8rpx !important;
  overflow: hidden;
}

.t-cell:first-child {
  border-top-left-radius: 8rpx !important;
  border-top-right-radius: 8rpx !important;
}

.t-cell:last-child {
  border-bottom-left-radius: 8rpx !important;
  border-bottom-right-radius: 8rpx !important;
}

/* Tag 标签 */
.t-tag {
  border-radius: 6rpx !important;
}

/* Avatar 头像 */
.t-avatar {
  border-radius: 6rpx !important;
}

.t-avatar--round {
  border-radius: 50% !important;
}

/* Card 卡片（如果使用） */
.t-card {
  border-radius: 10rpx !important;
}

/* Dialog 对话框 */
.t-dialog {
  border-radius: 10rpx !important;
}

/* Popup 弹出层 */
.t-popup {
  border-radius: 10rpx 10rpx 0 0 !important;
}

/* ActionSheet 动作面板 */
.t-action-sheet {
  border-radius: 10rpx 10rpx 0 0 !important;
}

/* Toast 提示 */
.t-toast {
  border-radius: 8rpx !important;
}

/* Switch 开关 */
.t-switch {
  border-radius: 20rpx !important;
}

/* Checkbox 复选框 */
.t-checkbox__icon {
  border-radius: 6rpx !important;
}

/* Radio 单选框 */
.t-radio__icon {
  border-radius: 50% !important;
}

/* Progress 进度条 */
.t-progress {
  border-radius: 4rpx !important;
}

/* Slider 滑块 */
.t-slider {
  border-radius: 4rpx !important;
}

/* Divider 分割线 */
.t-divider {
  border-radius: 0 !important;
}
