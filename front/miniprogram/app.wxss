/**
 * WolfChat 全局样式
 * @author Wreckloud
 * @date 2024-12-18
 */

/* 全局字体 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: #323233;
  background: #f7f8fa;
}

/* 全局滚动 */
::-webkit-scrollbar {
  display: none;
}

/* 全局按钮 */
.van-button--info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
}

.van-button--primary {
  background: linear-gradient(to right, #667eea, #764ba2);
  border: none;
}

/* 全局输入框 */
.van-field__control {
  color: #323233;
}

/* 全局对话框 */
.van-dialog__header {
  color: #323233;
  font-weight: bold;
}

/* 全局Toast */
.van-toast {
  z-index: 10000;
}

/* 通用容器 */
.page-container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 通用卡片 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 通用分割线 */
.divider {
  height: 20rpx;
  background: #f7f8fa;
}

/* 通用安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
